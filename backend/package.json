{
  "name": "reo-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "prisma generate && next build",
    "build:deploy": "prisma generate && (if [ -n \"$DATABASE_URL\" ]; then prisma migrate deploy; else echo '⚠️  DATABASE_URL not set, skipping migrations'; fi) && next build",
    "build:local": "prisma generate && next build",
    "start": "next start -p ${PORT:-3001}",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@prisma/client": "^5.19.0",
    "zod": "^3.23.8",
    "jsonwebtoken": "^9.0.2",
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/jsonwebtoken": "^9.0.6",
    "prisma": "^5.19.0",
    "typescript": "^5",
    "tsx": "^4.19.0",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0"
  }
}
